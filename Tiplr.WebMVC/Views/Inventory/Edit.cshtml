@model Tiplr.Models.InventoryUpdate

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>InventoryUpdate</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.InventoryId)
        @Html.HiddenFor(model => model.TotalOnHandValue)
        @Html.HiddenFor(model => model.LastModifiedBy)
        <div class="form-group">
         @* @Html.LabelFor(model => model.Finalized, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class = "control-label col-md-2"><b>Finalize?</b></div>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Finalized)
                    @Html.ValidationMessageFor(model => model.Finalized, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="button" class="btn btn-default" onclick="window.history.back();">Cancel</button>
                <input type="submit" value="Finalize" class="btn btn-default" />
            </div>
        </div>
    </div>
}

